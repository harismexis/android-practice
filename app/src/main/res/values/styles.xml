<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="BaseTxtv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="ToolbarText" parent="BaseTxtv">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">@color/grey_nine</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

</resources>